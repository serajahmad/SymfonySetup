<ul class="pager">
   {% if pager.isFirstPage == false %}
        <li class="first">
            <a value="{{ pager.getFirstPage }}">
                <img src="{{ asset('images/pager-first.png') }}" />
            </a>
        </li>
        <li class="previous">
            <a value="{{ pager.getPreviousPage }}">
                <img src="{{ asset('images/pager-prev.png') }}" />
            </a>
        </li>
   {% endif %}
   {% for page in pager.getPages %}
      {% if page == pager.getPage %}
        <li class="selected">
            <b>{{ page }}</b>
        </li>
      {% else %}
        {% if (pager.getPages|length > block_length) %}
            {% if page < pager.getPage %}
                {% if pager.getPage - page <= block_length %}                    
                    <li>
                        <a value="{{ page }}">{{ page }}</a>
                    </li>
                {% else %}
                    {% if loop.first %}
                        <li>...</li>
                    {% endif %}
                {% endif %}
            {% else %}
                {% if page - pager.getPage <= block_length %}
                    <li>
                        <a value="{{ page }}">{{ page }}</a>
                    </li>  
                {% else %}
                    {% if loop.last %}
                        <li>...</li>
                    {% endif %}
                {% endif %}                    
            {% endif %}               
        {% else %}
            <li>
                <a value="{{ page }}">{{ page }}</a>
            </li> 
        {% endif %}
      {% endif %}
   {% endfor %}  
   {% if pager.isLastPage == false %}
        <li class="next">
            <a value="{{ pager.getNextPage }}">
                <img src="{{ asset('images/pager-next.png') }}" />
            </a>
        </li>
        <li class="last">
            <a value="{{ pager.getLastPage }}">
                <img src="{{ asset('images/pager-last.png') }}" />
            </a>
        </li>
   {% endif %}
</ul>